@page
@model DailyReportFrontend.Pages.DailyReports.CreateModel

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>

<h4>New Daily Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @* asp-validation-summary display validation errors *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @* Label Tag Helper generates the label caption and for attribute for the Title property. *@
                <label asp-for="NewProject.ProjectName" class="control-label"></label>
                @* The Input Tag Helper uses the DataAnnotations attributes and produces HTML attributes needed for jQuery Validation on the client-side. *@
                <input asp-for="NewProject.ProjectName" class="form-control" />
                @* asp-validation-for display validation errors *@
                <span asp-validation-for="NewProject.ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewProject.Version" class="control-label"></label>
                <input asp-for="NewProject.Version" class="form-control" />
                <span asp-validation-for="NewProject.Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewDailyReport.Date" class="control-label"></label>
                <input asp-for="NewDailyReport.Date" class="form-control" />
                <span asp-validation-for="NewDailyReport.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewDailyReport.Message" class="control-label"></label>
                <input asp-for="NewDailyReport.Message" class="form-control" />
                <span asp-validation-for="NewDailyReport.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
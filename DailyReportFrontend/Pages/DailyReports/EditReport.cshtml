@page
@model DailyReportFrontend.Pages.DailyReports.EditReportModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Daily Report</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Report.Id" style="width: auto"/>
            <div class="form-group">
                <label asp-for="Report.Date" class="control-label"></label>
                <input asp-for="Report.Date" class="form-control" />
                <span asp-validation-for="Report.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.Message" class="control-label"></label>
                <textarea asp-for="Report.Message" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Report.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}